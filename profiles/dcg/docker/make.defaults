CUSTOM_PROFILE="yes"

ACCEPT_LICENSE="*"

LINGUAS="-* en"
LC_MESSAGES=C.utf8

UNINSTALL_IGNORE="/bin /lib /lib64 /sbin /usr/sbin"

COMMON_FLAGS="-O2 -pipe -march=native -flto"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

FEATURES="-ipc-sandbox -network-sandbox -pid-sandbox"

USE="${USE} lto"
USE="${USE} pgo"
USE="${USE} caps"

GENTOO_MIRRORS="http://gentoo.largedata.net http://distfiles.gentoo.org"

POSTGRES_TARGETS="-* postgres17"
